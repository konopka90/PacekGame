<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ganjastudio.pacekgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Spin"
            android:label="@string/title_activity_spin"></activity>
        <activity
            android:name=".GameBoard"
            android:label="@string/title_activity_main_board"></activity>
        <activity android:name=".WikiActivity"></activity>
        <activity
            android:name=".WikiItemActivity"
            android:label="@string/title_activity_wiki_item"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".WelcomeScreen">
        </activity>
    </application>

</manifest>
